<h1>Order Placed Sucessyully </h1>


<div class="container-fluid ">
    <br>
    <%= link_to "Home" , custs_path , class:"btn btn-info"%>
    <%= link_to 'Logout',mlogout_path ,class: "btn btn-danger",data:{confirm:"confirm to logout!!!"}%>
    <style>
    
        td,th {
        text-align: center;
        }
    </style>
    <%# p "@mproduct #{@mproduct.nil?}"%>
    <table class="table align-middled">
        <tr>
            <th>Order Id</th>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        <% @cart.each do |p| %>
        <% product=Mproduct.find_by(pid: p.pid)%>
            <tr>
                <td><%= p.id %></td>
                <td><%= p.pid %></td>
                <td><%= p.pname %></td>
                <td><%= p.quantity %></td>
                <% price=p.quantity*product.price%>
                <td><%= price %></td>
            </tr>
        <% end %>
    </table>
    <h3>Total Price is <%= params[:tot_price]%>
    
    <%= link_to "Home" , custs_path , class:"btn btn-info"%>
</div>

