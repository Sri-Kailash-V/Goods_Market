<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:htmltitle)? yield(:htmltitle) : "Goods Market" %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <script>
        <% if flash[:notice] %>
          alert ( "<%= flash[:notice] %>" );
        <%end%>
      </script>
  </head>

  <body>
  <div class= "container-fluid">
    <%= yield %>
  </div>
  </body>
</html>
